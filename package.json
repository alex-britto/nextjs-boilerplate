    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "backstopjs": "^6.2.1",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "eslint-plugin-cypress": "^2.13.2",
    "next": "13.2.4",
    "playwright": "^1.32.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.43.9",
    "styled-components": "^5.3.9",
    "styled-system": "^5.1.5",
    "typescript": "5.0.2",
    "zod": "^3.21.4"
  },
